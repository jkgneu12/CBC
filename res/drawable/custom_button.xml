<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#99121212"
                android:endColor="#99010101"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#000" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="15dp"
                android:top="8dp"
                android:right="15dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="#99343434"
                android:endColor="#99343434"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#333" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="15dp"
                android:top="8dp"
                android:right="15dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
            	android:startColor="#99181818"
                android:endColor="#99121212"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#11000000" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="15dp"
                android:top="8dp"
                android:right="15dp"
                android:bottom="8dp" />
        </shape>
    </item>
</selector>